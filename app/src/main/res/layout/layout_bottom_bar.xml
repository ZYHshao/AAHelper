<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="68dp"
    android:background="#f4d9d9"
    android:layout_alignParentBottom="true"
    >
    <RelativeLayout
        android:id="@+id/layoutBottomBarContent"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        >
        <ImageView
            android:id="@+id/layoutBottomBarImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/caipiaozhongjiang"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
           />
        <TextView
            android:id="@+id/layoutBottomBarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottom_bar"
            android:textColor="#0324f9"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layoutBottomBarImageView"
            android:paddingLeft="5dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/shezhi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_below="@+id/layoutBottomBarContent">
       <ListView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/layoutBottomListView"
           android:background="#f9f7f7"
           android:divider="#000"
           android:dividerHeight="1dp"
           >
       </ListView>
   </LinearLayout>
</RelativeLayout>